{
    "name": "grimoirejs-sc-slide",
    "version": "1.0.0",
    "description": "The boilerplate project for making plugin of grimoire.js.",
    "main": "index.js",
    "files": [
        "register",
        "ref",
        "src"
    ],
    "scripts": {
        "start": "webpack --watch --progress",
        "watch": "watch 'npm run build' ./gomls ./resources ./src",
        "stylus": "stylus ./resources/index.styl",
        "bundle": "webpack --progress --watch",
        "prepublish": "npm run build -- --prod",
        "build": "webpack --progress && node bundle.js > bundled.goml && npm run stylus",
        "generate-expose": "cauldron generate-exposure --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
        "generate-reference": "cauldron generate-reference --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref"
    },
    "dependencies": {
        "@types/jquery": "^2.0.45",
        "grimoirejs": "^0.15.4",
        "grimoirejs-forward-shading": "^1.6.2",
        "grimoirejs-fundamental": "^0.19.1",
        "grimoirejs-gltf": "beta",
        "grimoirejs-slide-system": "0.0.15",
        "jquery": "^3.2.1"
    },
    "devDependencies": {
        "babel-cli": "^6.18.0",
        "babel-core": "^6.21.0",
        "babel-loader": "^7.0.0",
        "babel-preset-es2015": "^6.18.0",
        "babel-preset-stage-2": "^6.18.0",
        "glob": "^7.1.2",
        "grimoirejs-cauldron": "^2.2.7",
        "handlebars": "^4.0.10",
        "raw-loader": "^0.5.1",
        "regenerator-runtime": "^0.10.1",
        "stylus": "^0.54.5",
        "ts-loader": "^2.1.0",
        "typescript": "^2.3.3",
        "watch": "^1.0.2",
        "webpack": "^2.6.0",
        "webpack-shell-plugin": "^0.5.0",
        "yargs": "^8.0.1"
    },
    "author": "GrimoireGL",
    "license": "MIT"
}
