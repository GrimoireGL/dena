@font-face
  font-family: 'mplus-1p-regular'
  src url('http://mplus-webfonts.sourceforge.jp/mplus-1p-regular.eot')
  src url('http://mplus-webfonts.sourceforge.jp/mplus-1p-regular.eot?#iefix') format('embedded-opentype'),
       url('http://mplus-webfonts.sourceforge.jp/mplus-1p-regular.woff') format('woff'),
       url('http://mplus-webfonts.sourceforge.jp/mplus-1p-regular.ttf') format('truetype');


html,body,div
  margin 0px
  padding 0px
  font-family 'mplus-1p-regular'


div#paragraph-root
  position absolute
  z-index 10
  left 0px
  right 0px
  top 0px
  bottom 0px

.title-text
  color #9C8C69
  font-size 36px
  text-align center
  bottom 120px
  position absolute
  left 0px
  right 0px

.align-right
  text-align right

.vertical-center
  display flex
  flex-direction column
  justify-content space-around
  position absolute
  left 0px
  right 0px
  top 0px
  bottom 0px
  text-align center

.center-text
  font-size 7em
  color white
  text-shadow 1px 1px 2px #000

.describe-logo
  width 512px
  margin 0 auto

.describe-container
  display flex
  position absolute
  left 0px
  right 0px
  top 0px
  bottom 0px
  justify-content space-between
  .describe-inner-container
    display flex
    flex-direction column
    width 33%
    text-align center
    &.bottom-align
      flex-direction column-reverse
    img
      width 40%

.fusion-root
  display flex
  width 100%
  height 100%
  .logo-root
    position absolute
    right 0px
    left 0px
    top 0px
    bottom 0px
    .logo-inner
      display flex
      width 100%
      height 100%
      justify-content center
      align-items center
  .fusion-logo
    width 512px
    height 512px
  .fusion-subtitle
    color black
    font-size 45px
  .fusion-root-child
    width 50%
    height 100%
    padding 20px
    img
      width 512px
